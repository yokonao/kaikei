<div class="max-w-6xl min-w-2xs sm:min-w-xl mx-auto min-h-screen">
  <div class="bg-white border-4 border-black shadow-2xl">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black flex justify-between items-center">
      <h1 class="text-3xl tracking-wide">貸借対照表</h1>
    </div>

    <p class="font-bold text-center m-4"><%= @from.strftime('%Y年%m月%d日') %> ~ <%= @to.strftime('%Y年%m月%d日') %></p>
    <div class="px-4 grid grid-cols-1 sm:grid-cols-2 gap-8">
      <!-- 資産の部 -->
      <div>
        <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2 text-center">資産の部</h2>
        <table class="w-full border-collapse mb-4">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-3/4">科目名</th>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-1/4">金額</th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @asset_lines.each do |line| %>
              <tr>
                <td class="px-4 py-3 border border-black text-sm"><%= line.name %></td>
                <td class="px-4 py-3 border border-black text-sm text-right">
                  <%= number_to_currency(line.amount, unit: "¥", precision: 0, delimiter: ",") %>
                </td>
              </tr>
            <% end %>
            <tr class="font-bold">
              <td class="px-4 py-3 border-2 border-black text-sm">資産合計</td>
              <td class="px-4 py-3 border-2 border-black text-sm text-right">
                <%= number_to_currency(@total_assets, unit: "¥", precision: 0, delimiter: ",") %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- 負債・純資産の部 -->
      <div>
        <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2 text-center">負債の部</h2>
        <table class="w-full border-collapse mb-4">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-3/4">科目名</th>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-1/4">金額</th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @liability_lines.each do |line| %>
              <tr>
                <td class="px-4 py-3 border border-black text-sm"><%= line.name %></td>
                <td class="px-4 py-3 border border-black text-sm text-right">
                  <%= number_to_currency(line.amount, unit: "¥", precision: 0, delimiter: ",") %>
                </td>
              </tr>
            <% end %>
            <tr class="font-bold">
              <td class="px-4 py-3 border-2 border-black text-sm">負債合計</td>
              <td class="px-4 py-3 border-2 border-black text-sm text-right">
                <%= number_to_currency(@total_liabilities, unit: "¥", precision: 0, delimiter: ",") %>
              </td>
            </tr>
          </tbody>
        </table>

        <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2 text-center">純資産の部</h2>
        <table class="w-full border-collapse mb-4">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-3/4">科目名</th>
              <th class="px-4 py-3 border border-black text-center text-sm tracking-wider w-1/4">金額</th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @equity_lines.each do |line| %>
              <tr>
                <td class="px-4 py-3 border border-black text-sm"><%= line.name %></td>
                <td class="px-4 py-3 border border-black text-sm text-right">
                  <%= number_to_currency(line.amount, unit: "¥", precision: 0, delimiter: ",") %>
                </td>
              </tr>
            <% end %>
            <tr class="font-bold">
              <td class="px-4 py-3 border-2 border-black text-sm">純資産合計</td>
              <td class="px-4 py-3 border-2 border-black text-sm text-right">
                <%= number_to_currency(@total_equity, unit: "¥", precision: 0, delimiter: ",") %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
