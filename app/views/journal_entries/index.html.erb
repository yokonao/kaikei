<div class="px-8 py-4 flex justify-between items-center">
  <h1 class="text-3xl tracking-wide">仕訳一覧</h1>
  <%= link_to "新規仕訳", new_journal_entry_path, class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-2 px-4 border-2 border-black tracking-widest" %>
</div>

<div class="px-8 pb-8">
  <table class="min-w-full border-collapse">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">仕訳日</th>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">摘要</th>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">借方科目</th>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">貸方科目</th>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">金額</th>
        <th class="px-4 py-3 border-[0.5] border-black text-center text-sm tracking-wider">操作</th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <% if @journal_entries.any? %>
        <% @journal_entries.each do |entry| %>
          <tr class="hover:bg-yellow-100">
            <td class="px-4 py-3 border-[0.5] border-black whitespace-nowrap text-sm">
              <%= entry.entry_date.strftime("%Y年%m月%d日") %>
            </td>
            <% debit_lines, credit_lines = entry.split_lines %>
            <td class="px-4 py-3 border-[0.5] border-black whitespace-nowrap text-sm">
              <%= entry.summary.present? ? entry.summary : "—" %>
            </td>
            <td class="px-4 py-3 border-[0.5] border-black text-sm">
              <% debit_lines.each do |line| %>
                <div><%= line.account.name %></div>
              <% end %>
            </td>
            <td class="px-4 py-3 border-[0.5] border-black text-sm">
              <% credit_lines.each do |line| %>
                <div><%= line.account.name %></div>
              <% end %>
            </td>
            <td class="px-4 py-3 border-[0.5] border-black whitespace-nowrap text-sm text-right">
              <% amount = debit_lines.sum(&:amount) %>
              <%= number_to_currency(amount, unit: "¥", precision: 0, delimiter: ",") %>
            </td>
            <td class="px-4 py-3 border-[0.5] border-black text-center text-sm">
              <div class="flex justify-center space-x-2">
                <%= link_to "編集", edit_journal_entry_path(entry), class: "text-black hover:bg-gray-200 px-2 py-1 border border-black" %>
                <%= button_to "削除", journal_entry_path(entry), method: :delete,
                              data: { turbo_confirm: "本当に削除しますか？" },
                              class: "text-black hover:bg-gray-200 px-2 py-1 border border-black bg-transparent" %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="px-4 py-8 border-[0.5] border-black text-center text-black">
            仕訳が登録されていません。
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @journal_entries %>
</div>
