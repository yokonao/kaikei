<div class="max-w-6xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg">
    <div class="bg-blue-600 text-white px-6 py-4 rounded-t-lg flex justify-between items-center">
      <h1 class="text-2xl font-bold">仕訳一覧</h1>
      <%= link_to "新規仕訳", "/", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">仕訳日</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">摘要</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">借方科目</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">貸方科目</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">金額</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @journal_entries.any? %>
            <% @journal_entries.each do |entry| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= entry.entry_date.strftime("%Y年%m月%d日") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= entry.summary.present? ? entry.summary : "—" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <% debit_lines = entry.journal_entry_lines.select { |line| line.side == "debit" } %>
                  <% debit_lines.each do |line| %>
                    <div><%= line.account.name %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <% credit_lines = entry.journal_entry_lines.select { |line| line.side == "credit" } %>
                  <% credit_lines.each do |line| %>
                    <div><%= line.account.name %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% amount = entry.journal_entry_lines.where(side: "debit").sum(:amount) %>
                  <%= number_to_currency(amount, unit: "¥", precision: 0, delimiter: ",") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "詳細", "/", class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "編集", "/", class: "text-green-600 hover:text-green-900" %>
                  <%= link_to "削除", "/", method: :delete,
                      data: { confirm: "本当に削除しますか？" },
                      class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                仕訳が登録されていません。
                <%= link_to "新規作成", "/", class: "text-blue-600 hover:text-blue-900 font-medium" %>
                してください。
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
