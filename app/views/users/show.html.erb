<div class="max-w-4xl min-w-2xs sm:min-w-2xl mx-auto py-12">
  <div class="bg-white border-4 border-black shadow-2xl">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black">
      <h1 class="text-3xl tracking-wide">アカウント設定</h1>
    </div>

    <div class="p-8">
      <div class="mb-8">
        <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2">メールアドレス</h2>
        <p><%= @user.email_address %></p>
      </div>

      <div data-controller="passkeys" class="mb-8">
        <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2">パスキー</h2>
        <div class="flex flex-col gap-4">
          <% if @user.user_passkeys.empty? %>
            <p class="text-gray-600">未登録</p>
          <% else %>
            <ul class="space-y-2">
              <% @user.user_passkeys.each do |passkey| %>
                <li class="p-4 border border-black">
                  <div class="flex justify-between items-center">
                    <span><%= passkey.id %></span>
                  </div>
                </li>
              <% end %>
            </ul>
          <% end %>
          <div>
            <button data-action="passkeys#register" class="bg-black text-white py-3 px-6 border-2 border-black hover:bg-gray-800">
              新しいパスキーを登録
            </button>
          </div>
        </div>
      </div>
    </div>

    <hr class="border-2" />

    <%= form_with model: @user, local: true, method: "DELETE", class: "p-8" do |form| %>
      <h2 class="text-2xl text-red-700 tracking-wide mb-4 text-center">アカウント削除</h2>
      <%= form.submit "アカウントを削除する", class: "block py-4 px-12 mx-auto bg-white hover:bg-red-700 focus:bg-red-700 border-2 border-red-700 text-xl text-red-700 hover:text-white focus:text-white tracking-widest cursor-pointer" %>
    <% end %>
  </div>
</div>
