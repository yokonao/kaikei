<div class="max-w-4xl min-w-2xs sm:min-w-2xl mx-auto py-12">
  <div class="bg-white border-4 border-black shadow-2xl">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black">
      <h1 class="text-3xl font-mono tracking-wide">アカウント設定</h1>
    </div>

    <div class="p-8">
      <div class="mb-8">
        <h2 class="text-2xl font-mono tracking-wide mb-4 border-b-2 border-black pb-2">メールアドレス</h2>
        <p class="font-mono"><%= @user.email_address %></p>
      </div>

      <div data-controller="passkeys" class="mb-8">
        <h2 class="text-2xl font-mono tracking-wide mb-4 border-b-2 border-black pb-2">パスキー</h2>
        <div class="flex flex-col gap-4">
          <% if @user.user_passkeys.empty? %>
            <p class="font-mono text-gray-600">未登録</p>
          <% else %>
            <ul class="space-y-2">
              <% @user.user_passkeys.each do |passkey| %>
                <li class="font-mono p-4 border border-black">
                  <div class="flex justify-between items-center">
                    <span><%= passkey.id %></span>
                  </div>
                </li>
              <% end %>
            </ul>
          <% end %>
          <div>
            <button data-action="passkeys#register" class="bg-black text-white font-mono py-3 px-6 border-2 border-black hover:bg-gray-800">
              新しいパスキーを登録
            </button>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-mono tracking-wide mb-4 border-b-2 border-black pb-2">パスワード</h2>
        <% password_exists = @user_basic_password.persisted? %>
        <div class="mb-4">
          <% if password_exists %>
            <p class="font-mono">設定済み</p>
          <% else %>
            <p class="font-mono text-gray-600">未設定</p>
          <% end %>
        </div>

        <h3 class="text-xl font-mono tracking-wide mb-4">
          <% if password_exists %>
            パスワードを変更
          <% else %>
            パスワードを設定
          <% end %>
        </h3>
        <%= form_with model: @user_basic_password, url: users_password_path, method: :put, class: "space-y-4" do |form| %>
          <% if form.object.errors.any? %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
              <% form.object.errors.full_messages.each do |message| %>
                <span class="block sm:inline"><%= message %></span>
              <% end %>
            </div>
          <% end %>

          <% if password_exists %>
            <div class="flex flex-col">
              <%= form.label :password_challenge, "現在のパスワード", class: "block font-mono mb-1" %>
              <%= form.password_field :password_challenge, autocomplete: "current-password", class: "block w-full h-full font-mono p-2 border border-black" %>
            </div>
          <% end %>

          <div class="flex flex-col">
            <%= form.label :password, "新しいパスワード", class: "block font-mono mb-1" %>
            <%= form.password_field :password, autocomplete: "new-password", class: "block w-full h-full font-mono p-2 border border-black" %>
          </div>

          <div class="flex flex-col">
            <%= form.label :password_confirmation, "新しいパスワード（確認）", class: "block font-mono mb-1" %>
            <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full h-full font-mono p-2 border border-black" %>
          </div>

          <div>
            <%= form.submit password_exists ? "変更" : "設定", class: "bg-black text-white font-mono py-3 px-6 border-2 border-black hover:bg-gray-800 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
