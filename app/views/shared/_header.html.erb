<header class="font-mono bg-white border-b-4 border-black shadow-2xl">
  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-8">
        <%= link_to root_path, class: "text-3xl font-mono font-black tracking-widest text-black hover:text-gray-700 transition-colors" do %>
          KAIKEI
        <% end %>

        <nav class="flex space-x-1">
          <%= link_to "仕訳", journal_entries_path,
              class: "tracking-wide text-black hover:bg-gray-100 px-3 py-2 border-2 border-transparent hover:border-black transition-all" %>
          <%= link_to "勘定", general_ledger_path,
              class: "tracking-wide text-black hover:bg-gray-100 px-3 py-2 border-2 border-transparent hover:border-black transition-all" %>
          <%= link_to "決算", new_financial_closing_path,
              class: "tracking-wide text-black hover:bg-gray-100 px-3 py-2 border-2 border-transparent hover:border-black transition-all" %>
          <button popovertarget="financial-statements-menu"
            class="tracking-wide text-black hover:bg-gray-100 px-3 py-2 border-2 border-transparent hover:border-black transition-all cursor-pointer">
            財務諸表
          </button>
          <div id="financial-statements-menu" popover>
            <div class="flex flex-col py-2 border-2 border-black">
              <%= link_to "損益計算書", profit_and_loss_path,
                class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all" %>
              <%= link_to "貸借対照表", balance_sheet_path,
                class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all" %>
            </div>
          </div>
          <button popovertarget="user-profile-menu"
            aria-label="ユーザープロフィールメニュー"
            class="tracking-wide text-black hover:bg-gray-100 px-3 py-2 border-2 border-transparent hover:border-black transition-all cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
            </svg>

          </button>
          <div id="user-profile-menu" popover>
            <div class="flex flex-col py-2 border-2 border-black">
              <div class="px-3 py-2 text-center text-black"><%= Current.user.email_address %></div>
              <div class="px-3 py-2 text-center text-black"><%= Current.company.name %></div>
              <%= link_to "事業所切り替え", companies_path,
                class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all" %>
              <%= link_to "アカウント設定", user_path,
                class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all" %>
              <%= link_to "事業所設定", company_path,
                class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all" %>
              <%= form_with url: session_path, method: :delete, local: true do |form| %>
                <%= form.button "ログアウト", formmethod: :delete,
                    class: "w-full tracking-wide text-center text-black hover:bg-gray-100 px-3 py-2 transition-all cursor-pointer" %>
              <% end %>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>
