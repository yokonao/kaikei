<div class="max-w-xl mx-auto">
  <div class="bg-white border-4 border-black shadow-2xl mt-12">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black flex items-center space-x-2">
      <%= image_tag "/icon.svg", class: "w-12 h-12", alt: "ロゴ" %>
      <h1 class="text-3xl font-mono tracking-wide">KAIKEI</h1>
    </div>

    <div class="p-8">
      <% if alert = flash[:alert] %>
        <div class="bg-red-50 border-2 border-red-800 text-red-800 px-6 py-4 mb-6 font-mono">
          <%= alert %>
        </div>
      <% end %>

      <% if notice = flash[:notice] %>
        <div class="bg-gray-50 border-2 border-black px-6 py-4 mb-6 font-mono">
          <%= notice %>
        </div>
      <% end %>

      <% case @login_method %>
      <% when "otp" %>
        <%= form_with url: session_url do |form| %>
          <%= form.hidden_field :login_method, value: "otp" %>
          <div class="border-2 border-black mb-8">
            <div class="grid grid-cols-3 gap-0">
              <div class="col-span-1">
                <%= form.label :email_address, "メールアドレス", class: "block border-b-[0.5px] border-r-[0.5px] border-black bg-gray-100 p-4 text-center font-mono" %>
              </div>
              <div class="col-span-2">
                <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", class: "block w-full h-full border-b-[0.5px] border-black p-4 font-mono focus:outline-none focus:bg-yellow-100" %>
              </div>
            </div>
          </div>

          <div class="flex justify-center">
            <%= form.submit "ワンタイムパスワードを送信", class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black font-mono text-xl tracking-widest cursor-pointer" %>
          </div>
        <% end %>
      <% when "otp_verification" %>
        <%= form_with url: session_url do |form| %>
          <%= form.hidden_field :login_method, value: "otp_verification" %>
          <%= form.hidden_field :email_address, value: "" %>
          <div class="border-2 border-black mb-8">
            <div class="grid grid-cols-2 gap-0">
              <div class="col-span-1">
                <%= form.label :otp, "ワンタイムパスワード", class: "block border-b-[0.5px] border-r-[0.5px] border-black bg-gray-100 p-4 text-center font-mono" %>
              </div>
              <div class="col-span-1">
                <%= form.text_field :otp, required: true, autocomplete: "one-time-code", maxlength: 8, class: "block w-full h-full border-b-[0.5px] border-black p-4 font-mono focus:outline-none focus:bg-yellow-100" %>
              </div>
            </div>
          </div>

          <div class="flex justify-center">
            <%= form.submit "ログイン", class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black font-mono text-xl tracking-widest cursor-pointer" %>
          </div>
        <% end %>
      <% else %>
        <%= form_with url: session_url do |form| %>
          <%= form.hidden_field :login_method, value: "basic" %>
          <div class="border-2 border-black mb-8">
            <div class="grid grid-cols-3 gap-0">
              <div class="col-span-1">
                <%= form.label :email_address, "メールアドレス", class: "block border-b-[0.5px] border-r-[0.5px] border-black bg-gray-100 p-4 text-center font-mono" %>
              </div>
              <div class="col-span-2">
                <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", class: "block w-full h-full border-b-[0.5px] border-black p-4 font-mono focus:outline-none focus:bg-yellow-100" %>
              </div>
            </div>
            <div class="grid grid-cols-3 gap-0">
              <div class="col-span-1">
                <%= form.label :password, "パスワード", class: "block border-b-[0.5px] border-r-[0.5px] border-black bg-gray-100 p-4 text-center font-mono" %>
              </div>
              <div class="col-span-2">
                <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "block w-full h-full border-b-[0.5px] border-black p-4 font-mono focus:outline-none focus:bg-yellow-100" %>
              </div>
            </div>
          </div>

          <div class="flex justify-center">
            <%= form.submit "ログイン", class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black font-mono text-xl tracking-widest cursor-pointer" %>
          </div>
        <% end %>
      <% end %>


      <div class="text-center mt-6">
        <%= link_to "アカウント登録", signup_path, class: "font-mono text-sm underline hover:text-blue-600" %>
        <span class="font-mono text-sm">/</span>
        <%= link_to "パスワードをお忘れの方", new_password_path, class: "font-mono text-sm underline hover:text-blue-600" %>
      </div>
    </div>
  </div>
</div>
