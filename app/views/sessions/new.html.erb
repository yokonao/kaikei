<div class="max-w-xl min-w-2xs sm:min-w-xl mx-auto">
  <div class="bg-white border-4 border-black shadow-2xl mt-12">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black flex items-center space-x-2">
      <%= image_tag "/icon.svg", class: "w-12 h-12", alt: "ロゴ" %>
      <h1 class="text-3xl tracking-wide">KAIKEI</h1>
    </div>

    <div class="p-8">
      <% case @login_method %>
      <% when "otp" %>
        <%= form_with url: session_url do |form| %>
          <%= form.hidden_field :login_method, value: "otp" %>
          <%= form.hidden_field :email_address, value: "" %>
          <table class="w-full border-collapse border-2 mb-4">
              <th scope="row" class="border">
                <%= form.label :otp, "ワンタイムパスワード", class: "block w-full border-black bg-gray-100 p-4 text-center" %>
              </th>
              <td class="border">
                <%= form.text_field :otp, required: true, autocomplete: "one-time-code", maxlength: 8,
                      class: "block w-full p-4 focus:outline-none focus:bg-yellow-100" %>
              </td>
            </tr>
          </table>

          <div class="flex justify-center">
            <%= form.submit "ログイン", class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black text-xl tracking-widest cursor-pointer" %>
          </div>
        <% end %>
      <% else %>
        <div class="flex flex-col space-y-8">
          <%= form_with url: one_time_passwords_path do |form| %>
            <%= form.hidden_field :login_method, id: "password-less-login-login-method", value: "otp" %>
            <table class="w-full border-collapse border-2 mb-4" data-controller="session-passkey">
                <th scope="row" class="border">
                  <%= form.label :email_address, "メールアドレス", class: "block w-full border-black bg-gray-100 p-4 text-center" %>
                </th>
                <td class="border">
                  <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username webauthn",
                        class: "block w-full p-4 focus:outline-none focus:bg-yellow-100" %>
                </td>
              </tr>
            </table>

            <div class="flex justify-center">
              <%= form.submit "ログイン",
                class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black text-xl tracking-widest cursor-pointer" %>
            </div>
          <% end %>

          <% if Rails.env.development? %>
            <h2 class="text-2xl tracking-wide mb-4 border-b-2 border-black pb-2">開発者向けログイン</h2>
            <%= form_with url: session_url do |form| %>
              <%= form.hidden_field :login_method, id: "dev-login-login-method", value: "dev" %>

              <table class="w-full border-collapse border-2 mb-4">
                  <th scope="row" class="border">
                    <%= form.label :user_id, "ユーザー", class: "block w-full border-black bg-gray-100 p-4 text-center" %>
                  </th>
                  <td class="border">
                    <%= form.select :user_id, User.all.map { |u| [ u.email_address, u.id ]}, {},
                        { class: "block w-full p-4 focus:outline-none focus:bg-yellow-100 appearance-none" } %>
                  </td>
                </tr>
              </table>

              <div class="flex justify-center">
                <%= form.submit "ログイン",
                  class: "bg-black hover:bg-gray-800 focus:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:outline-none text-white py-4 px-12 border-2 border-black text-xl tracking-widest cursor-pointer" %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>


      <% unless @login_method == "otp" %>
        <div class="text-center mt-6">
          <%= link_to "アカウント登録", sign_up_path, class: "underline hover:text-blue-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
