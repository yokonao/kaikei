<div class="max-w-xl min-w-2xs sm:min-w-xl mx-auto">
  <div class="bg-white border-4 border-black shadow-2xl mt-12">
    <div class="bg-gray-100 px-8 py-6 border-b-4 border-black flex items-center space-x-2">
      <h1 class="text-3xl tracking-wide">事業所作成</h1>
    </div>

    <%= form_with model: @company, url: companies_path, class: "p-8" do |form| %>
      <% if @company.errors.any? %>
        <div class="bg-red-50 border-2 border-red-800 text-red-800 px-6 py-4 mb-6">
          <ul>
            <% @company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <table class="w-full border-collapse border-2 mb-4">
          <th scope="row" class="border">
            <%= form.label :name, "事業所名", class: "block w-full border-black bg-gray-100 p-4 text-center" %>
          </th>
          <td class="border">
            <%= form.text_field :name, required: true, autofocus: true,
                  class: "block w-full p-4 focus:outline-none focus:bg-yellow-100" %>
          </td>
        </tr>
      </table>

      <div class="flex justify-center">
        <%= form.submit "作成",
          class: designer.primary_button(size: :lg) %>
      </div>
    <% end %>
  </div>
</div>
